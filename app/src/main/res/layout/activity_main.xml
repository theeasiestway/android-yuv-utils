<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:scrollbars="none">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">

        <ImageView
            android:id="@+id/vCameraFacing"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:padding="4dp"
            android:layout_marginBottom="8dp"
            android:background="?android:attr/selectableItemBackground"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginBottom="16dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center">

                <androidx.camera.view.PreviewView
                    android:id="@+id/vCameraPreview"
                    android:layout_width="150dp"
                    android:layout_height="150dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Camera preview"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginStart="16dp">

                <SurfaceView
                    android:id="@+id/vSurfaceView"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:scaleType="center"/>

                <ImageView
                    android:id="@+id/vImageView"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:scaleType="matrix"
                    android:visibility="gone"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Result"/>
            </LinearLayout>
        </LinearLayout>

        <CheckBox
            android:id="@+id/vCheckBoxOutput"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Output to ImageView"/>

        <Button
            android:id="@+id/vPlay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Play"/>

        <Button
            android:id="@+id/vStop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Stop"
            android:visibility="gone"/>

        <Space
            android:layout_width="match_parent"
            android:layout_height="16dp"/>

        <SeekBar
            style="@style/Widget.AppCompat.SeekBar.Discrete"
            android:id="@+id/vWidth"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:max="10"/>

        <TextView
            android:id="@+id/vWidthLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <SeekBar
            style="@style/Widget.AppCompat.SeekBar.Discrete"
            android:id="@+id/vHeight"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:max="10"/>

        <TextView
            android:id="@+id/vHeightLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="16dp"
            android:gravity="center">

            <Button
                android:id="@+id/vRotate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rotate"/>

            <Button
                android:id="@+id/vMirrorH"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="MirrorH"
                android:layout_marginStart="8dp"/>

            <Button
                android:id="@+id/vMirrorV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="MirrorV"
                android:layout_marginStart="8dp"/>
        </LinearLayout>
    </LinearLayout>
</ScrollView>